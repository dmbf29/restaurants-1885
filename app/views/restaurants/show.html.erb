<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://loremflickr.com/320/200/restaurant,<%= @restaurant.category.downcase %>/all?lock=<%= @restaurant.id %>);">
  <div class="container">
  </div>
</div>
<div class="container mt-2 mb-5">
  <div class="row justify-content-around">
    <div class="col-12 col-sm-8">
      <p>
        <%= link_to '< Restaurants', restaurants_path, class: 'btn-light opacity-25 text-decoration-none' %>
      </p>
      <div class="d-flex align-items-center">
        <h1 class="m-0"><%= @restaurant.name %></h1>
        <p class="m-0 ms-2" style="font-size: 0.8em">
          <% @restaurant.rating.round.times do %>
            <i class="fas fa-star"></i>
          <% end %>
          <% (5 - @restaurant.rating.round).times do %>
            <i class="far fa-star"></i>
          <% end %>
        </p>
      </div>
      <p class="fw-lighter opacity-75 mt-2"><%= Faker::Restaurant.description  %></p>
      <h3>Reviews</h3>
      <p>
        <%#= link_to 'Add Review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary'  %>
        <a class="btn btn-primary" data-bs-toggle="collapse" href="#newReview" role="button" aria-expanded="false" aria-controls="collapseExample">
          Add Review
        </a>
        <div class="collapse" id="newReview">
          <div class="card card-body" data-controller="character-counter">
            <%= simple_form_for [@restaurant, @review] do |f| %>
              <%= f.input :content, input_html: { data: {
                                                    action: "keyup->character-counter#count",
                                                    character_counter_target: 'input'
                                                } } %>
              <div class="form-text" data-character-counter-target="counter">
                0 characters
              </div>
              <%= f.submit class: 'btn btn-primary mt-2' %>
            <% end %>
          </div>
        </div>
      </p>
      <ul>
        <% if @restaurant.reviews.any? %>
          <% @restaurant.reviews.each do |review| %>
            <li>
              <%= review.content %>
              <%= link_to 'x', review_path(review), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'text-decoration-none text-secondary'  %>
            </li>
          <% end %>
        <% else %>
          <li>No reviews yet.</li>
        <% end %>
      </ul>
    </div>
    <div class="col-12 col-sm-4 mt-5">
      <%= render 'restaurants/side_info' %>
    </p>
  </div>
</div>
